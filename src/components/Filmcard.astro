---
const { id, titre, imageUrl, genre, langue } = Astro.props;
---

<a
    href={`/films/${id}`}
    class="block bg-white shadow-lg rounded-lg overflow-hidden transform transition hover:scale-105"
    data-genre={genre}
    data-langue={langue}
>
    <img
        src={imageUrl}
        alt={"Affiche du film " + titre}
        class="w-full h-64 object-cover"
    />
    <div class="p-4 text-center">
        <h3 class="text-xl font-semibold text-gray-900">{titre}</h3>
    </div>
</a>
