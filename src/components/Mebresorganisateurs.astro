---
const { membres } = Astro.props;
import { Picture } from "astro:assets";
---

<section class="py-12 px-6 text-center bg-[#FAF7E7]">
    <h2 class="text-3xl font-bold text-yellow-600 mb-8">Membres Organisateurs</h2>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-4xl mx-auto">
        {membres.map((membre) => (
            <div class="flex flex-col items-center">
                <!-- Photo du membre -->
                <Picture 
                    src={membre.photo} 
                    alt={membre.nom} 
                    class="w-24 h-24 md:w-32 md:h-32 rounded-full object-cover shadow-md"
                />
                <!-- Nom du membre -->
                <p class="mt-4 text-lg font-semibold text-gray-900">{membre.nom}</p>
                <!-- RÃ´le du membre -->
                <p class="text-gray-700 text-sm md:text-base">{membre.role}</p>
            </div>
        ))}
    </div>
</section>
