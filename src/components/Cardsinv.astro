---
const { invite } = Astro.props;
---

<a
    href={`/invite/${invite.id}`}
    class="block bg-white shadow-lg rounded-lg overflow-hidden transform transition hover:scale-105"
>
    <img
        src={invite.imageUrl}
        alt={"Photo de " + invite.prenom + " " + invite.nom}
        class="w-32 h-32 mx-auto rounded-full object-cover shadow-md"
    />
    <div class="p-4 text-center">
        <h3 class="text-xl font-semibold text-gray-900">
            {invite.nom}
            {invite.prenom}
        </h3>
    </div>
</a>
