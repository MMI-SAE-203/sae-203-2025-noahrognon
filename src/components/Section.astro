---
const { title, description, link, linkText } = Astro.props;
---

<section class="py-16 px-4 lg:px-20 text-center max-w-5xl mx-auto">
    <!-- Titre -->
    <h2 class="text-4xl font-bold text-blue-900 mb-6">{title}</h2>

    <!-- Description -->
    <p class="text-lg text-gray-800 max-w-3xl mx-auto leading-relaxed">
        {description}
    </p>

    <!-- Bouton -->
    <div class="mt-6 flex justify-center">
        <a
            href={link}
            class="flex items-center gap-3 bg-white border-2 border-[#ABCEAC] px-6 py-3 rounded-lg shadow-md text-lg font-semibold text-gray-900 transition hover:bg-green-500 hover:text-white"
        >
            <img src="/fleche.png" alt="FlÃ¨che" class="w-6 h-6" />
            {linkText}
        </a>
    </div>
</section>
