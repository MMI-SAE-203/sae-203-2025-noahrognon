---
const { title, mapSrc } = Astro.props;
---
<section class="py-12 px-4">
    <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-blue-900 mb-4">{title}</h2>
        <div class="overflow-hidden rounded-lg shadow-md border border-gray-300">
            <iframe
                src={mapSrc}
                class="w-full h-80 md:h-96"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
            ></iframe>
        </div>
    </div>
</section>
