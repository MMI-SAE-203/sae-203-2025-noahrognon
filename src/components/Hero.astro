---
const { title, subtitle, buttonText, imageSrc } = Astro.props;
import { Picture } from "astro:assets";
---

<section
    class="relative w-full h-[400px] lg:h-[500px] flex items-center justify-center text-center bg-black/40 bg-blend-multiply"
>
    
    <Picture
        img src={imageSrc} 
        alt="CinÃ©magny Festival" 
        class="absolute inset-0 w-full h-full object-cover -z-10" 
        loading="lazy"
        />
    

    <div class="mt-6 flex flex-col items-center">
        <h1
            class="text-[48px] lg:text-[60px] font-bold font-header1 mb-8 !text-white"
        >
            {title}
        </h1>
        <p
            class="!text-[32px] !lg:text-[38px] font-semibold font-header2 mb-6 !text-white"
        >
            {subtitle}
        </p>
        <div class="flex justify-center">
            <a
                href="/films"
                class="flex items-center gap-3 bg-white border-4 border-[#F0C808] px-6 py-3 text-black font-bold text-lg rounded-lg shadow-md transition duration-300 hover:bg-gray-100"
            >
                <span>{buttonText}</span>
            </a>
        </div>
    </div>
</section>
